{
  "name": "PNPM Store Persistence",
  "id": "pnpm-store-persistence",
    "version": "0.1.5",
  "description": "Sets pnpm store to ~/.pnpm-store and mounts it to a volume to share between multiple devcontainers",
  "options": {},
  "mounts": [
    {
      "source": "pnpm-store",
      "target": "/dc/pnpm-store",
      "type": "volume"
    }
  ],
  "onCreateCommand": {
    "pnpm-store-persistence": "/usr/local/share/pnpm-store-persistence/scripts/oncreate.sh"
  },
  "updateContentCommand": {
    "pnpm-store-persistence": "/usr/local/share/pnpm-store-persistence/scripts/updatecontent.sh"
  },
  "postCreateCommand": {
    "pnpm-store-persistence": "/usr/local/share/pnpm-store-persistence/scripts/postcreate.sh"
  },
  "postStartCommand": {
    "pnpm-store-persistence": "/usr/local/share/pnpm-store-persistence/scripts/poststart.sh"
  },
  "postAttachCommand": {
    "pnpm-store-persistence": "/usr/local/share/pnpm-store-persistence/scripts/postattach.sh"
  },
  "installsAfter": [
      "ghcr.io/devcontainers/features/common-utils"
  ]
}
