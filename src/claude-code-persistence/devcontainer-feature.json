{
    "name": "Claude Code Persistence",
    "id": "claude-code-persistence",
    "version": "0.1.0",
    "description": "Avoid extra logins from the Claude Code CLI by preserving the `~/.claude/.credentials.json` folder across container instances.",
    "options": {},
    "mounts": [
        {
            "source": "claude-code-config",
            "target": "/dc/claude-code",
            "type": "volume"
        }
    ],
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "onCreateCommand": {
        "github-cli-persistence-setup": "/usr/local/share/claude-code-persistence/scripts/oncreate.sh"
    }
}
